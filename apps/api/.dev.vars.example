# Local Development Secrets for API
# Copy this file to .dev.vars and fill in the values
# Do NOT commit .dev.vars to git

# Email
RESEND_API_KEY=re_xxxxxxxxx

# Payments
PAYSTACK_SECRET_KEY=sk_test_xxx

# AI
OPENAI_API_KEY=sk-xxx

# SMS Provider Configuration
# Routing is configured in: apps/api/src/lib/sms/config.ts
# Default: Ghana (+233) → Zend|Pilo, Canada (+1) → Telnyx, Others → Prelude

# Ghana providers
ZEND_API_KEY=
PILO_SMS_API_KEY=
PILO_SMS_SENDER_ID=

# International providers
TELNYX_API_KEY=
TELNYX_FROM_NUMBER=
PRELUDE_API_TOKEN=

# KYC
SMILE_API_KEY=your-smile-api-key

# Observability (optional)
AXIOM_API_TOKEN=

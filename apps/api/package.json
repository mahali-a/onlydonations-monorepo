{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=@repo/core",
    "build:staging": "turbo build --filter=@repo/core",
    "build:production": "turbo build --filter=@repo/core",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write .",
    "lint:ci": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "deploy": "wrangler deploy",
    "deploy:staging": "bun run build:staging && wrangler deploy --env staging",
    "deploy:production": "bun run build:production && wrangler deploy --env production",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "test": "echo 'No tests yet'",
    "cf-typegen": "wrangler types --env-interface BaseEnv"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.11",
    "@types/node": "^22.19.1",
    "typescript": "^5.9.3",
    "vitest": "~4.0.14",
    "wrangler": "^4.51.0"
  },
  "dependencies": {
    "@prelude.so/sdk": "^0.9.0",
    "@repo/core": "workspace:*",
    "@repo/email": "workspace:*",
    "hono": "^4.10.7",
    "zod": "^4.1.13"
  }
}

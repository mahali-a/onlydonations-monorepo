# Local Development Secrets
# Copy this file to .env.local and fill in the values
# Do NOT commit .env.local to git

# Auth
BETTER_AUTH_SECRET=your-secret-key-here
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email
RESEND_API_KEY=re_xxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# Payments
PAYSTACK_SECRET_KEY=sk_test_xxx
PAYSTACK_PUBLIC_KEY=pk_test_xxx

# KYC (Smile Identity)
SMILE_PARTNER_ID=7634
SMILE_API_KEY=your-smile-api-key
SMILE_ENVIRONMENT=sandbox
SMILE_CALLBACK_URL=https://your-callback-url

# CMS
CMS_API_URL=https://cms.onlydonations.com/api

# Security
HONEYPOT_SECRET=your-honeypot-secret

# URLs (set automatically by wrangler.jsonc vars, but can override locally)
# BASE_URL=http://localhost:3000
# R2_PUBLIC_URL=http://localhost:3000/r2

# Observability (optional)
AXIOM_API_TOKEN=

# Error Tracking (Sentry)
# Get your DSN from sentry.io > Project Settings > Client Keys (DSN)
# SENTRY_DSN is configured in wrangler.jsonc vars (public, safe to commit)

{
  "name": "@repo/email",
  "version": "1.0.0",
  "description": "Email service with Resend and React Email templates",
  "exports": {
    "./email/setup": {
      "default": "./dist/email/setup.js",
      "types": "./dist/email/setup.d.ts"
    },
    "./email/types": {
      "default": "./dist/email/types.js",
      "types": "./dist/email/types.d.ts"
    },
    "./email/queue": {
      "default": "./dist/email/queue.js",
      "types": "./dist/email/queue.d.ts"
    },
    "./email/registry": {
      "default": "./dist/email/registry.js",
      "types": "./dist/email/registry.d.ts"
    },
    "./email/schema": {
      "default": "./dist/email/schema.js",
      "types": "./dist/email/schema.d.ts"
    }
  },
  "scripts": {
    "dev": "email dev --dir src/templates",
    "build": "tsc -p tsconfig.json --outDir ./dist && tsc-alias",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "check:ci": "biome check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",

  "dependencies": {
    "@react-email/components": "^1.0.1",
    "nanoid": "^5.1.6",
    "react": "^19.2.0",
    "react-dom": "19.2.0",
    "resend": "^6.5.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251128.0",
    "@types/react": "^19.2.7",
    "react-email": "5.0.4",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  }
}

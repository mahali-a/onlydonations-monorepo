{
  "name": "@repo/core",
  "version": "1.0.0",
  "description": "Manage auth, database, schemas, and queries",
  "exports": {
    "./auth/*": {
      "default": "./dist/auth/*.js",
      "types": "./dist/auth/*.d.ts"
    },
    "./database/*": {
      "default": "./dist/database/*.js",
      "types": "./dist/database/*.d.ts"
    },
    "./types": {
      "default": "./dist/database/types.js",
      "types": "./dist/database/types.d.ts"
    },
    "./zod-schema/*": {
      "default": "./dist/zod-schema/*.js",
      "types": "./dist/zod-schema/*.d.ts"
    },
    "./drizzle/schema": {
      "default": "./dist/drizzle/schema.js",
      "types": "./dist/drizzle/schema.d.ts"
    },
    "./drizzle/auth-schema": {
      "default": "./dist/drizzle/auth-schema.js",
      "types": "./dist/drizzle/auth-schema.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir ./dist && tsc-alias",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "check:ci": "biome check .",
    "better-auth:generate": "mkdir -p src/drizzle && npx @better-auth/cli@latest generate --config ./config/auth.ts --output ./src/drizzle/auth-schema.ts",
    "drizzle:generate": "drizzle-kit generate --config drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "drizzle:pull": "drizzle-kit pull --config drizzle.config.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.22.0",
  "dependencies": {
    "@epic-web/invariant": "^1.0.0",
    "@neondatabase/serverless": "^1.0.2",
    "@planetscale/database": "^1.19.0",
    "@repo/email": "workspace:^",
    "better-auth": "^1.3.34",
    "better-sqlite3": "^12.4.1",
    "drizzle-orm": "^0.44.7",
    "nanoid": "^5.1.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251113.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "better-sqlite#": "link:@types/better-sqlite#",
    "drizzle-kit": "^0.31.7",
    "postgres": "^3.4.7",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  }
}
